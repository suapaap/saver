	}
	public void sale(int menu, int count) {
		food.add("1. 햄버거");
		price.add(15000);		
		food.add("2. 피자");
		price.add(20000);
		food.add("3. 음료수(콜라/사이다)");
		price.add(2000);
		food.add("4. 과자");
		price.add(1000);
		food.add("5. 사탕");
		price.add(500);
		for(int i=0; i<food.size(); i++) {
			for(int j=0; j<price.size(); j++) {
			menu = scan.nextInt(i);
			
			}
		}
		

		}		 
	
	public void total() {
		int subsum=0; //나홀로 더하기
